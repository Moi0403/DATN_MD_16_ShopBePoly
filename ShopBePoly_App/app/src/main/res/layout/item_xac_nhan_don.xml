<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp">

        <!-- Mã đơn hàng -->
        <TextView
            android:id="@+id/tvmaDH"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã đơn hàng: #ABC123"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#000000" />

        <!-- Số lượng sản phẩm -->
        <TextView
            android:id="@+id/tvSoLuongSP"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Số lượng sản phẩm: 3"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Thành tiền -->
        <TextView
            android:id="@+id/tvthanhTien"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Thành tiền: 1.200.000đ"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Ngày mua -->
        <TextView
            android:id="@+id/tvngayMua"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Ngày mua: 2025-07-24"
            android:textSize="14sp"
            android:textColor="#444444" />

        <!-- Trạng thái -->
        <TextView
            android:id="@+id/tvTT"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="Trạng thái: Đang giao"
            android:textSize="14sp"
            android:textColor="#388E3C"
            android:textStyle="bold" />

        <!-- Lý do hủy (ẩn nếu không có) -->
        <TextView
            android:id="@+id/tvLydo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:layout_marginBottom="6dp"
            android:padding="8dp"
            android:text="Lý do hủy: Người dùng không muốn nhận hàng nữa"
            android:textColor="#D32F2F"
            android:textSize="14sp"
            android:background="#1AF44336"
            android:textStyle="italic"
            android:visibility="gone" />

        <!-- Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="10dp">

            <Button
                android:id="@+id/btnChitiet"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/custom_vien"
                app:backgroundTint="@null"
                android:text="Xem chi tiết"
                android:textColor="#0D0000"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnHuy"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:background="@drawable/button_bg"
                app:backgroundTint="@null"
                android:text="Hủy đơn hàng"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/btnNhan"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_bg"
                android:text="Xác nhận đơn hàng"
                app:backgroundTint="@null"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
            <Button
                android:id="@+id/btnMuaLai"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:background="@drawable/button_bg"
                app:backgroundTint="@null"
                android:text="Mua lại"
                android:textColor="#FFFFFF"
                android:textSize="12sp"
                android:textStyle="bold" />
        </LinearLayout>

    </LinearLayout>
</androidx.cardview.widget.CardView>
