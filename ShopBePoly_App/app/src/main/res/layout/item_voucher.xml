<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:background="@drawable/voucher_item_bg"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="2dp">

    <!-- Left: Voucher Icon -->
    <LinearLayout
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/voucher_icon_bg"
        android:gravity="center"
        android:layout_marginEnd="16dp">

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_voucher_ticket"
            android:scaleType="centerInside" />
    </LinearLayout>

    <!-- Center: Voucher Info -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginEnd="12dp">

        <TextView
            android:id="@+id/tvVoucherTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Giảm 50.000đ"
            android:textColor="#FF6B35"
            android:textStyle="bold"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/tvVoucherDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cho đơn hàng từ 200.000đ"
            android:textColor="#666666"
            android:textSize="12sp"
            android:layout_marginTop="4dp" />

        <TextView
            android:id="@+id/tvVoucherCode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SAVE50K"
            android:textColor="#333333"
            android:textStyle="bold"
            android:textSize="12sp"
            android:background="@drawable/voucher_code_bg"
            android:padding="4dp"
            android:layout_marginTop="8dp" />

        <TextView
            android:id="@+id/tvVoucherExpiry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Từ 01/01/2025 09:00 đến 31/12/2025 23:59"
            android:textColor="#999999"
            android:textSize="10sp"
            android:layout_marginTop="6dp"
            android:maxLines="2"
            android:ellipsize="end" />

    </LinearLayout>

    <!-- Right: Action Button -->
    <TextView
        android:id="@+id/btnSaveVoucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lưu"
        android:textColor="#FFFFFF"
        android:textStyle="bold"
        android:background="@drawable/save_voucher_bg"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="14sp"
        android:layout_gravity="center_vertical" />

</LinearLayout>