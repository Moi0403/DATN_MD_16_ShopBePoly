<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true"
    android:overScrollMode="ifContentScrolls"
    android:background="@drawable/dialog_rounded_bg"
    android:padding="15dp">

    <LinearLayout
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:background="@drawable/dialog_rounded_bg">

        <!-- Tiêu đề -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_vietqr"
                android:layout_marginEnd="8dp"/>

            <TextView
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Thanh toán VietQR"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="#222"
                android:gravity="center" />

            <ImageView
                android:id="@+id/btnCloseDialog"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_exit"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"/>
        </LinearLayout>

        <!-- QR Code Container -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="12dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- Loading indicator -->
                <ProgressBar
                    android:id="@+id/progressQR"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_centerInParent="true"
                    android:visibility="visible"/>

                <!-- QR Code Image -->
                <ImageView
                    android:id="@+id/imgQRCode"
                    android:layout_width="220dp"
                    android:layout_height="220dp"
                    android:scaleType="fitCenter"
                    android:background="#FFFFFF"
                    android:contentDescription="QR Code thanh toán"
                    android:visibility="gone"/>

                <TextView
                    android:id="@+id/txtQRStatus"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Đang tạo mã QR..."
                    android:textSize="14sp"
                    android:textColor="#666"
                    android:gravity="center"
                    android:layout_marginTop="12dp" />

                <!-- Refresh QR button -->
                <Button
                    android:id="@+id/btnRefreshQR"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:text="Làm mới QR"
                    android:textSize="12sp"
                    android:textColor="#2196F3"
                    android:background="@drawable/btn_outline"
                    android:layout_marginTop="8dp"
                    android:visibility="gone"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Payment Information -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="8dp"
            app:cardElevation="2dp"
            app:cardBackgroundColor="#F8F9FA"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin thanh toán"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#222"
                    android:layout_marginBottom="12dp"/>

                <!-- Amount -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Số tiền:"
                        android:textSize="14sp"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/txtAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0₫"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#FF3D00" />
                </LinearLayout>

                <!-- Transfer content -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="8dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Nội dung CK:"
                        android:textSize="14sp"
                        android:textColor="#666" />

                    <TextView
                        android:id="@+id/txtContent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="ShopBePoly ORD123"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="#222"
                        android:background="@drawable/content_bg"
                        android:padding="4dp"/>
                </LinearLayout>

                <!-- Account info -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thông tin tài khoản nhận:"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_marginBottom="4dp" />

                <TextView
                    android:id="@+id/txtAccountInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="MB Bank - 0123456789\nSHOPBEPOLY"
                    android:textSize="13sp"
                    android:textStyle="bold"
                    android:textColor="#2196F3"
                    android:background="@drawable/account_info_bg"
                    android:padding="8dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Instructions -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/instruction_bg"
            android:padding="12dp"
            android:layout_marginBottom="20dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="8dp">

                <ImageView
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_infor"
                    android:layout_marginEnd="8dp"
                    android:layout_marginTop="2dp"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Hướng dẫn thanh toán:"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="#222" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="1. Mở app ngân hàng hoặc ví điện tử\n2. Chọn chức năng quét QR Code\n3. Quét mã QR bên trên\n4. Kiểm tra thông tin và xác nhận thanh toán\n5. Chụp ảnh bill và nhấn 'Đã thanh toán'"
                android:textSize="12sp"
                android:textColor="#555"
                android:lineSpacingExtra="2dp"
                android:layout_marginStart="24dp" />
        </LinearLayout>

        <!-- Timer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/ic_timer"
                android:layout_marginEnd="4dp"/>

            <TextView
                android:id="@+id/txtTimer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thời gian còn lại: 14:59"
                android:textSize="12sp"
                android:textColor="#FF9800"
                android:textStyle="bold" />
        </LinearLayout>

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnCancelPayment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Hủy thanh toán"
                android:textSize="14sp"
                android:backgroundTint="#D50000"
                android:layout_marginEnd="8dp" />

            <Button
                android:id="@+id/btnConfirmPayment"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="48dp"
                android:text="Đã thanh toán"
                android:textColor="#FFF"
                android:textSize="14sp"
                android:textStyle="bold"
                android:backgroundTint="#4CAF50"
                android:layout_marginStart="8dp" />
        </LinearLayout>

        <!-- Payment verification note -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="* Đơn hàng sẽ được xử lý sau khi xác minh thanh toán thành công"
            android:textSize="10sp"
            android:textColor="#999"
            android:textStyle="italic"
            android:gravity="center"
            android:layout_marginTop="8dp" />

    </LinearLayout>
</ScrollView>
