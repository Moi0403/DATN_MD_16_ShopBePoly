<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/dialog_rounded_bg"
    android:padding="0dp">

    <!-- Header with gradient background -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/header_home"
        android:padding="24dp"
        android:gravity="center">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Đổi mật khẩu"
            android:textSize="22sp"
            android:textStyle="bold"
            android:gravity="center"
            android:textColor="#FFFFFF" />

    </LinearLayout>

    <!-- Content section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFFFFF"
        android:padding="24dp">

        <!-- Current Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu hiện tại"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtCurrentPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập mật khẩu hiện tại"
            android:inputType="textPassword"
            android:background="@drawable/edittext_modern_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp" />

        <!-- New Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mật khẩu mới"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtNewPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập mật khẩu mới"
            android:inputType="textPassword"
            android:background="@drawable/edittext_modern_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="16dp" />

        <!-- Confirm New Password -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Xác nhận mật khẩu mới"
            android:textSize="14sp"
            android:textColor="#666666"
            android:layout_marginBottom="8dp" />

        <EditText
            android:id="@+id/edtConfirmPassword"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Nhập lại mật khẩu mới"
            android:inputType="textPassword"
            android:background="@drawable/edittext_modern_bg"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            android:layout_marginBottom="8dp" />

    </LinearLayout>

    <!-- Button section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#F8F9FA"
        android:padding="24dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Lưu ý: Mật khẩu mới phải có ít nhất 6 ký tự"
            android:textSize="12sp"
            android:textColor="#999999"
            android:gravity="center"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <Button
                android:id="@+id/btnCancel"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Hủy"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/btn_cancel_gray"
                app:backgroundTint="@null"
                android:textColor="#FFFFFF"
                android:layout_marginEnd="8dp"
                android:elevation="2dp"
                android:stateListAnimator="@null" />

            <Button
                android:id="@+id/btnChangePassword"
                android:layout_width="0dp"
                android:layout_height="52dp"
                android:layout_weight="1"
                android:text="Đổi mật khẩu"
                android:textSize="16sp"
                android:textStyle="bold"
                android:background="@drawable/btn_green_new"
                app:backgroundTint="@null"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:elevation="4dp"
                android:stateListAnimator="@null" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
