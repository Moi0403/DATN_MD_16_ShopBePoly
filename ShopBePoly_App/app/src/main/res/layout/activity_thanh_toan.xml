<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".ThanhToan">

        <!-- Nội dung cuộn được -->
        <ScrollView
            android:id="@+id/scrollContent"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottomBar"
            android:fillViewport="true"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="24dp"
            android:paddingBottom="8dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="0dp">

                <!-- Nút back và tiêu đề -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageButton
                        android:id="@+id/btnBack"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Back"
                        android:src="@drawable/ic_back" />

                    <TextView
                        android:id="@+id/txtTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_horizontal"
                        android:text="Thanh toán"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="24dp"
                        android:layout_height="24dp" />
                </LinearLayout>

                <!-- CardView sản phẩm -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/cardProduct"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="4dp"
                    android:layout_marginTop="16dp"
                    android:layout_marginStart="4dp"
                    android:layout_marginEnd="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="12dp">

                        <ImageView
                            android:id="@+id/imgProduct"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:scaleType="fitCenter" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:paddingStart="12dp">

                            <TextView
                                android:id="@+id/txtProductName"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Tên sản phẩm"
                                android:textStyle="bold"
                                android:textSize="16sp"
                                android:textColor="#222"/>

                            <TextView
                                android:id="@+id/txtProductQuantity"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Số lượng: "
                                android:textSize="14sp"
                                android:textColor="#444"/>

                            <LinearLayout
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center">
                                <TextView
                                    android:id="@+id/txtProductColorLabel"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Màu: "
                                    android:textSize="14sp"
                                    android:textColor="#444"/>
                                <TextView
                                    android:id="@+id/txtProductColor"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Màu"
                                    android:textSize="16sp" />
<!--                                <View-->
<!--                                    android:id="@+id/viewProductColor"-->
<!--                                    android:layout_width="20dp"-->
<!--                                    android:layout_height="20dp"-->
<!--                                    android:background="@drawable/circle_red"-->
<!--                                    />-->
                            </LinearLayout>

                            <TextView
                                android:id="@+id/txtProductSize"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Size "
                                android:textSize="14sp"
                                android:textColor="#444"/>

                            <TextView
                                android:id="@+id/txtProductPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0 VND"
                                android:textStyle="bold"
                                android:textColor="#000"
                                android:textSize="15sp"
                                android:layout_marginTop="4dp" />
                        </LinearLayout>
                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!-- Thông tin khách hàng -->
                <TextView
                    android:id="@+id/txtCustomerInfoLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thông tin khách hàng"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textColor="#222"
                    android:layout_marginTop="20dp"
                    android:layout_marginStart="4dp"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginTop="4dp"
                    android:layout_marginStart="16dp"
                    android:layout_marginEnd="16dp"/>

