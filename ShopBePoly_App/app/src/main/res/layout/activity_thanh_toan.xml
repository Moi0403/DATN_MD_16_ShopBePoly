<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFF"
    tools:context=".ThanhToan">

    <!-- Nội dung cuộn -->
    <ScrollView
        android:id="@+id/scrollContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        android:fillViewport="true"
        android:paddingStart="24dp"
        android:paddingEnd="24dp"
        android:paddingTop="24dp"
        android:paddingBottom="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Nút back và tiêu đề -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/btnBack"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    android:src="@drawable/ic_back" />

                <TextView
                    android:id="@+id/txtTitle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="center_horizontal"
                    android:text="Thanh toán"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="24dp"
                    android:layout_height="24dp" />
            </LinearLayout>

            <!-- Danh sách sản phẩm nếu đi từ giỏ hàng -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_cart_items"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                android:nestedScrollingEnabled="false" />

            <!-- Thông tin sản phẩm đơn lẻ -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardProductInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF"
                app:cardUseCompatPadding="true"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <ImageView
                        android:id="@+id/imgProduct"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:scaleType="centerCrop"
                        android:background="@drawable/rounded_image_bg" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/txtProductName"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Tên sản phẩm"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:textColor="#222" />

                        <TextView
                            android:id="@+id/txtProductColor"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Màu sắc"
                            android:textSize="14sp"
                            android:textColor="#666"
                            android:layout_marginTop="4dp" />

                        <TextView
                            android:id="@+id/txtProductSize"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Size"
                            android:textSize="14sp"
                            android:textColor="#666" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp">

                            <TextView
                                android:id="@+id/txtProductQuantity"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Số lượng: 1"
                                android:textSize="14sp"
                                android:textColor="#666" />

                            <TextView
                                android:id="@+id/txtProductPrice"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0₫"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:textColor="#FF3D00" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Thông tin khách hàng -->
            <TextView
                android:id="@+id/txtCustomerInfoLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Thông tin khách hàng"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222"
                android:layout_marginTop="10dp"
                android:layout_marginStart="4dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:id="@+id/layoutCustomerInfo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="10dp">

                    <TextView
                        android:id="@+id/txtCustomerName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tên khách hàng"
                        android:textColor="#444"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/txtCustomerAddress"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:text="Địa chỉ"
                            android:textColor="#888"
                            android:textSize="14sp" />

                        <ImageView
                            android:id="@+id/img_next_Adress"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/baseline_navigate_next_24"/>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/txtCustomerPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Số điện thoại"
                        android:textColor="#888"
                        android:textSize="14sp"/>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Phần Mã giảm giá -->
            <TextView
                android:id="@+id/txtVoucherLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã giảm giá"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222"
                android:layout_marginTop="10dp"
                android:layout_marginStart="4dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="14dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="#FFF"
                app:cardUseCompatPadding="true">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Input mã voucher -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <EditText
                            android:id="@+id/etVoucherCode"
                            android:layout_width="0dp"
                            android:layout_height="48dp"
                            android:layout_weight="1"
                            android:hint="Nhập mã giảm giá"
                            android:background="@drawable/edittext_border"
                            android:padding="12dp"
                            android:textSize="14sp"
                            android:inputType="textCapCharacters"
                            android:maxLines="1"
                            android:imeOptions="actionDone" />

                        <Button
                            android:id="@+id/btnApplyVoucher"
                            android:layout_width="wrap_content"
                            android:layout_height="48dp"
                            android:text="Áp dụng"
                            android:textColor="#FFF"
                            android:backgroundTint="#FF6B35"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:layout_marginStart="8dp"
                            android:paddingStart="16dp"
                            android:paddingEnd="16dp" />
                    </LinearLayout>

                    <!-- Nút chọn từ danh sách voucher -->
                    <LinearLayout
                        android:id="@+id/layoutSelectVoucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="12dp"
                        android:background="?attr/selectableItemBackground"
                        android:padding="8dp"
                        android:clickable="true"
                        android:focusable="true">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_voucher_ticket"
                            app:tint="#FF6B35"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Chọn mã giảm giá có sẵn"
                            android:textColor="#FF6B35"
                            android:textSize="14sp"
                            android:layout_marginStart="8dp" />

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/baseline_navigate_next_24"
                            app:tint="#FF6B35" />
                    </LinearLayout>

                    <!-- Thông tin voucher đã áp dụng -->
                    <LinearLayout
                        android:id="@+id/layoutAppliedVoucher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="12dp"
                        android:background="@drawable/applied_voucher_bg"
                        android:padding="12dp"
                        android:visibility="gone">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/ic_voucher_check"
                                app:tint="#4CAF50" />

                            <TextView
                                android:id="@+id/txtAppliedVoucherTitle"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Giảm 50.000đ"
                                android:textColor="#4CAF50"
                                android:textStyle="bold"
                                android:textSize="14sp"
                                android:layout_marginStart="8dp" />

                            <TextView
                                android:id="@+id/btnRemoveVoucher"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Bỏ chọn"
                                android:textColor="#FF5722"
                                android:textSize="12sp"
                                android:background="?attr/selectableItemBackground"
                                android:padding="4dp"
                                android:clickable="true"
                                android:focusable="true" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/txtAppliedVoucherDesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Mã: SAVE50K - Giảm 50.000đ cho đơn hàng từ 200.000đ"
                            android:textColor="#666"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_marginStart="28dp" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- Phương thức vận chuyển -->
            <TextView
                android:id="@+id/txtShippingMethodTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Phương thức vận chuyển"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="16dp"
                android:layout_marginStart="4dp"/>

            <RadioGroup
                android:id="@+id/radioGroupShipping"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <RadioButton
                    android:id="@+id/radioStandardShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giao hàng tiêu chuẩn (20.000₫)" />

                <RadioButton
                    android:id="@+id/radioFastShipping"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Giao hàng nhanh (50.000₫)" />
            </RadioGroup>

            <!-- Ghi chú phí giao hàng -->
            <TextView
                android:id="@+id/txtShippingNote"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Áp dụng phí nội thành"
                android:textColor="#888888"
                android:textSize="13sp"
                android:layout_marginTop="4dp"
                android:layout_marginStart="4dp"/>

            <!-- Phương thức thanh toán -->
            <TextView
                android:id="@+id/txtPaymentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phương thức thanh toán"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#222"
                android:layout_marginTop="20dp"
                android:layout_marginStart="4dp"/>

            <RadioGroup
                android:id="@+id/radioGroupPaymentMain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="8dp"
                android:layout_marginStart="4dp"
                android:layout_marginEnd="4dp">

                <RadioButton
                    android:id="@+id/radioCOD"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán khi nhận hàng"
                    android:checked="true"
                    android:textSize="14sp"
                    android:textColor="#222"/>

                <RadioButton
                    android:id="@+id/radioZaloPay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán qua ZaloPay"
                    android:textSize="14sp"
                    android:textColor="#222"
                    android:drawableStart="@drawable/ic_zalopay"
                    android:drawablePadding="8dp"/>

                <RadioButton
                    android:id="@+id/radioAppBank"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán qua app ngân hàng"
                    android:textSize="14sp"
                    android:textColor="#222"/>
            </RadioGroup>

            <LinearLayout
                android:id="@+id/layoutBankOptions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp">

                <RadioGroup
                    android:id="@+id/radioGroupBank"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RadioButton
                        android:id="@+id/radioMomo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Momo"
                        android:drawableStart="@drawable/ic_momo"
                        android:drawablePadding="8dp"
                        android:textSize="14sp"
                        android:textColor="#222"/>

                    <RadioButton
                        android:id="@+id/radioAgribank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Agribank"
                        android:drawableStart="@drawable/ic_agribank"
                        android:drawablePadding="8dp"
                        android:textSize="14sp"
                        android:textColor="#222"/>
                </RadioGroup>
            </LinearLayout>

            <!-- Thông tin ZaloPay -->
            <LinearLayout
                android:id="@+id/layoutZaloPayInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_marginTop="8dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/rounded_border"
                android:padding="12dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Thanh toán an toàn qua ZaloPay"
                    android:textSize="14sp"
                    android:textColor="#007AFF"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Ví điện tử hàng đầu Việt Nam\n• Thanh toán nhanh chóng, bảo mật\n• Hỗ trợ nhiều ngân hàng liên kết\n• Phí giao dịch: 0₫\n• Được bảo hiểm 100%"
                    android:textSize="12sp"
                    android:textColor="#666"
                    android:layout_marginTop="4dp" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Bottom bar: Tổng tiền + Nút đặt hàng -->
    <LinearLayout
        android:id="@+id/bottomBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#FFF"
        android:paddingTop="12dp"
        android:paddingBottom="30dp"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="8dp">

        <LinearLayout
            android:id="@+id/layoutTotal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng tiền hàng"
                    android:textColor="#888"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txtProductTotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VND"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Phí vận chuyển"
                    android:textColor="#888"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txtShippingFee"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VND"
                    android:textColor="#000"
                    android:textSize="14sp" />
            </LinearLayout>

            <!-- Dòng giảm giá voucher -->
            <LinearLayout
                android:id="@+id/layoutVoucherDiscount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end"
                android:visibility="gone">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Giảm giá voucher"
                    android:textColor="#4CAF50"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/txtVoucherDiscount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-50,000 VND"
                    android:textColor="#4CAF50"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Tổng thanh toán"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:textSize="15sp" />
                <TextView
                    android:id="@+id/txtTotalPayment"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0 VND"
                    android:textColor="#FF0000"
                    android:textStyle="bold"
                    android:textSize="15sp" />
            </LinearLayout>
        </LinearLayout>

        <Button
            android:id="@+id/btnDatHang"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Đặt hàng"
            android:textStyle="bold"
            android:textColor="#FFF"
            android:backgroundTint="#FF3D00"
            android:layout_marginTop="16dp"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>