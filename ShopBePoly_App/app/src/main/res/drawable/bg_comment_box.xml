<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Nền màu xám nhạt -->
    <solid android:color="#F5F5F5" />

    <!-- Bo góc -->
    <corners android:radius="8dp" />

    <!-- Viền mỏng màu xám -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Padding bên trong -->
    <padding
        android:left="8dp"
        android:top="6dp"
        android:right="8dp"
        android:bottom="6dp" />
</shape>